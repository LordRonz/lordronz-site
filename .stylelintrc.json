{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "layer",
          "plugin",
          "config",
          "utility",
          "theme",
          "reference"
        ]
      }
    ],
    "import-notation": null,
    "at-rule-no-deprecated": null,
    "property-no-vendor-prefix": [true, { "ignoreProperties": ["transform"] }]
  }
}
